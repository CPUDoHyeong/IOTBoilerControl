<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/call_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="call_Temperature"
        app:layout_constraintBottom_toTopOf="@id/temp_control"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"/>

    <Button
        android:id="@+id/function_control"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="func_control"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/temp_control"
        app:layout_constraintTop_toBottomOf="@+id/call_temp"
        app:layout_constraintBottom_toTopOf="@+id/test"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <Button
        android:id="@+id/temp_control"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="temp_control"
        app:layout_constraintBottom_toTopOf="@+id/test"
        app:layout_constraintLeft_toRightOf="@+id/function_control"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/call_temp" />

    <TextView
        android:id="@+id/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="input"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/temp_control" />

</android.support.constraint.ConstraintLayout>